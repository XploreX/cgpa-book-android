<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.updateCGPA.EnterMarksFragment">
    <!--    <include layout="@layout/dashboard_button"/>-->

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/detailscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="48dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_subjectsleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects Left: 4"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/txt_credits"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                       android:text="Credits: 4"/>
                   <TextView
                       android:id="@+id/txt_subname"
                       android:layout_width="wrap_content"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginTop="8dp"
                       android:layout_height="wrap_content"
                       android:fontFamily="monospace"
                       android:textColor="#000000"
                       android:text="Subject Name: Mathematics"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000000"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="53dp"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_your_grade" />
               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <ImageView
               android:layout_marginEnd="25dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:translationZ="25dp"
               android:layout_alignParentEnd="true"
               android:clickable="true"
               android:focusable="true"
               android:layout_marginTop="-25dp"
               android:contentDescription="@string/undo"
               android:layout_below="@id/detailscard"
               android:src="@drawable/ic_bx_bx_undo"/>
       </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

        <LinearLayout
            android:id="@+id/llv_grade_button"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <!--           <Button-->
            <!--               style="?android:attr/buttonBarButtonStyle"-->
            <!--               android:layout_marginEnd="12dp"-->
            <!--               android:layout_width="0dp"-->
            <!--               android:layout_weight="1"-->
            <!--               android:textColor="#000000"-->
            <!--               android:layout_height="wrap_content"-->
            <!--               android:textStyle="bold"-->
            <!--               android:text="1"-->
            <!--               android:background="@drawable/buttons"/>-->
            <!--           <Button-->
            <!--               style="?android:attr/buttonBarButtonStyle"-->
            <!--               android:layout_width="0dp"-->
            <!--               android:layout_weight="1"-->
            <!--               android:textStyle="bold"-->
            <!--               android:layout_height="wrap_content"-->
            <!--               android:textColor="#000000"-->
            <!--               android:text="1"-->
            <!--               android:background="@drawable/buttons"/>-->
        </LinearLayout>

   </LinearLayout>

</RelativeLayout>